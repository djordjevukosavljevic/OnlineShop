@{
    Layout = null;
}
@section Scripts{
        
}
@foreach (var item in Model)
{
    <tr style="display: none;" class="row-helper">
        <td>
            <div class="d-flex px-2 py-1 counter-rows">
                <div>
                    <object data="URL_to_preferred_image.png" type="image/png">
                    <img src="@Url.Content("~/Content/Images/laptopimg.jpg")" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                    </object>
                </div>
                <div class="d-flex flex-column justify-content-center">
                    <h6 class="mb-0 text-sm">@item.Name</h6>
                    <p class="text-xs text-secondary mb-0">@item.Description</p>
                </div>
            </div>
        </td>
        <td>
            <p class="text-xs font-weight-bold mb-0">@item.Price &euro;</p>
        </td>
        <td class="align-middle text-center text-sm">
            @if (@item.Active)
            {   
                <span class="badge badge-sm bg-gradient-success">Active</span>
            }
            else
            {
                <span class="badge badge-sm bg-gradient-dark">Inactive</span>
            }
        </td>
        <td class="align-middle text-center text-sm">
        <td class="align-middle text-center">
            <h1 class="text-secondary text-xs font-weight-bold">Date uploaded:</h1>
            <span class="text-secondary text-xs font-weight-bold">@item.DateCreatedAt</span>
        </td>
        <td class="align-middle text-center">
            <h2 class="text-secondary text-xs font-weight-bold">Date updated:</h2>
            <span class="text-secondary text-xs font-weight-bold">@item.DateCreatedAt</span>
        </td>
        <td class="align-middle text-center">
            <span class="bg-gradient-dark btn btn-dark" id="addToCartBtm"><i class="fa-solid fa-cart-shopping"></i>Add to cart</span>
        </td>
        <td class="align-middle text-center">
            <button class="bg-gradient-danger btn btn-dark">
            <a asp-action="Edit" asp-controller="Product" asp-area="Administration" asp-route-id="@item.Id" class="text-white text-center" data-toggle="tooltip" data-original-title="Edit user">
                <i class="fa-regular fa-pen-to-square"></i>Edit
            </a>
            </button>
        </td>
    </tr>
}